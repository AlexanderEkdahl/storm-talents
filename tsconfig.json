{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "dom",
            "es6"
        ],
        "skipLibCheck": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*"
    ]
}
